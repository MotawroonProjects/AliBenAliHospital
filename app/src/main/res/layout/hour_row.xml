<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="lang"
            type="String" />
        <variable
            name="model"
            type="com.alibenalihospital.models.HourModel" />

    </data>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background='@{model.selected?@drawable/rounded_primary:@drawable/small_rounded_stroke_gray2}'

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text='@{model.phone_hour+model.period}'
                android:textColor="@{model.selected?@color/white:@color/gray1}"
                android:textSize="15sp" />


        </LinearLayout>

    </FrameLayout>
</layout>